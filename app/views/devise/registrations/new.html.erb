<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
       <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for our Pro account for $10/month and get access to the community and contact information.</p>
          <br>
        <% else %>
          <h1>Basic Account</h1>
          <p> Sig up for free and get basic access to the community. </p>
          <br>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign Up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
      
       
      </div>
    </div>
  </div>
</div>